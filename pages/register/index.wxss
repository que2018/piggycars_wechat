.main-flex-container {
  display:flex;
  flex-direction: column;
}
.input-flex-container {
  display:flex;
  flex-direction: column;
}
.flex-container {
  display:flex;
  flex-direction: row;
  width: 70vw;
  margin: 0 auto;
  margin-bottom: 25px;
}
.swiper-tab {
  width: 100vw;
  border-bottom: 1px solid #e2e2e2;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.swiper-tab-item{
    width: 50%; 
    color:#434343;
    font-size: 18px;
}
.active{
    color:#008254;
    border-bottom: 2px solid #008254;
}
swiper{
  text-align: center;
}
input {    
  font-size: 18px;
  height: 50px;
}
.input-group.error {
  border-bottom: 1rpx solid red;
}
.input-code {
  margin-left: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 300rpx;
  height: 50rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  border: 1rpx solid #F1F1F1;
}
.image-code {
  margin-left: 10rpx;
  width: 90rpx;
  height: 50rpx;
  border: 1rpx solid #F1F1F1;
}
.pbtn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #008254 !important; 
}
.swiper {
  height: 100vh;
}
.errorMsg {
  color:red;
}
.error_show {
  display:block;
}
.error_hide {
  display:none;
}
.showOption {
  display:flex;
  flex-direction: column;
}
.hideOption {
  display:none;
}
.select{
  margin-left: 20rpx;
  width: 130rpx;
  height:50rpx;
  font-size: 28rpx;
  border:1px solid #F1F1F1;
  border-radius: 12rpx;
  align-self:center;
}
.selectText {
  width: 130rpx;
  height:50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}
.option{
  width: 130rpx;
  font-size: 25rpx;
  border:1px solid #F1F1F1;
  border-radius: 12rpx;
  line-height: 50rpx;
  position:relative;
  z-index:99;
  background:white;
}
.options {
  display:flex;
  flex-direction: row;
  width: 70vw;
  margin: 0 auto;
  margin-bottom: 25px;
  align-items: center; justify-content: center;
}
.countryr {
  width: 90px;
  line-height: 28px;
  font-size: 14px;
  background: #ffffff;
  border-radius: 0px 3px 3px 0px;
  border-right: 1px solid #f1f1f1;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  margin-left:-6px;
}
.countryl {
  width: 90px;
  line-height: 28px;
  font-size: 14px;
  background: #ffffff;
  border-radius: 3px 0px 0px 3px;
  border-left: 1px solid #f1f1f1;
  border-top: 1px solid #f1f1f1;
  border-bottom: 1px solid #f1f1f1;
  margin-right: -6px;
}
.clickedr {
  width: 90px;
  line-height: 28px; 
  font-size: 14px;
  color: white;
  background: #008254;
  border-radius: 0px 3px 3px 0px;
  border-right: 1px solid #008254;
  border-top: 1px solid #008254;
  border-bottom: 1px solid #008254;
  margin-left:-6px;
}
.clickedl {
  width: 90px;
  line-height: 28px;
  font-size: 14px;
  color: white;
  background: #008254;
  border-radius: 3px 0px 0px 3px;
  border-left: 1px solid #008254;
  border-top: 1px solid #008254;
  border-bottom: 1px solid #008254;
  margin-right: -6px;
}
.labelText {
  width: 30vw;
  text-align:right;
}
.tip {
  position:absolute;
  background:white;
  border:1rpx solid black;
  border-radius:12rpx;
  padding:10rpx;
  margin-top:90rpx;
  z-index:99;
  width:500rpx;
}
.tip.show{
  display: block;
}
.tip.hide{
  display: none;
}
.tipText {
  font-size:25rpx;
  color:red;
  text-align:left;
}
.input-group {
  display:flex;
  width: 100%;
  flex-direction: row;
  border-bottom: 1px solid #cccccc;
  text-align: left;
}
.input-group image {
  width: 26px;
  height: 26px;
  margin-top: 12px;
  margin-right: 6px;
}
.phone-form{
  display:block;
  margin-top: 10vh;
}
.email-form{
  display:block;
