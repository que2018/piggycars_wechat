<view class="flex-container">
  <view class="sms-title">更新电话号码</view>
  <form bindsubmit='sms'>
    <view class="form-inner">
      <view class="input-group">
        <picker bindchange="bindCountryCodeChange" value="{{country_code}}" range="{{country_codes}}" class="country-code">
          <view class="picker">{{country_code}}</view>
        </picker>
        <input name="phone" placeholder="电话" />
        <image src="../../images/phone.png"></image>
      </view>
      <view class="input-group">
        <input name="code" placeholder="短信验证码" bindinput="bindCode" />
        <image src="../../images/message.png"></image>
      </view>
      <button size="default" loading="{{btn_sms_loading}}" class="btn-sms" form-type='submit'>发送代码</button>
      <view class="sms-cancel">取消重置</view>
    </view>
  </form>
</view>
<view class="btn-wrap">
  <view class="btn-next" bindtap="bindNext">下一步</view>
</view>
