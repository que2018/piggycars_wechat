<view id="ld-block" class="{{show_loading?'show':'hide'}}">
  <image src="../../images/loading.gif" mode="aspectFit" class="ld-img"></image>
</view>
<view class="flex-container-login {{is_login?'hide':'show'}}">
  <view class="logo">   
    <image src="../../images/logo_long.png"></image>
  </view>
  <form bindsubmit='login'>
    <view class="form-inner">
      <view class="input-groups">
        <view class="input-group">
          <input name="username" placeholder="请输入邮箱" value="{{username}}" />
          <image src="../../images/mail.png"></image>
        </view>
        <view class="input-group">
          <input name="password" password="true" placeholder="请输入密码" value="{{password}}" />
          <image src="../../images/pass.png"></image>
        </view>
      </view>
      <button type="primary" class="btn-submit" size="default" loading="{{loading}}" form-type='submit'>登录</button>
    </view>
    <view class="register" hover-class="register-hover" bindtap="clickRegister">
      <view class="reg-l">没有账号?<text decode="{{true}}">&nbsp;&nbsp;</text></view>
      <view class="reg-r">快来注册吧!</view>
    </view>
  </form>
</view>
<view class="flex-container-user {{is_login?'show':'hide'}}">
  <view class="captain">
    <view class="title">基本信息</view>
    <view class="content">
      <view class="cname">姓名<span class="cvalue">
        <text decode="{{true}}">&nbsp;&nbsp;</text>{{first_name}}
        <text decode="{{true}}">&nbsp;&nbsp;</text>{{last_name}}</span>
      </view>
      <view class="cname">邮箱<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{email}}</span></view>
    </view>
  </view>
  <view class="space"></view>
  <view class="captain">
    <view class="title">地址信息</view>
    <view class="content">
      <view class="cname">国家<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{country}}</span></view>
      <view class="cname">地址<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{address_1}}</span></view>
      <view class="cname">地址2<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{address_2}}</span></view>
      <view class="cname">城市<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{city}}</span></view>
      <view class="cname">州/省<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{zone}}</span></view>
      <view class="cname">邮编<span class="cvalue"><text decode="{{true}}">&nbsp;&nbsp;</text>{{postcode}}</span></view>
    </view>
  </view>
  <view class="space"></view>
  <view class="captain">
    <view class="title">驾照信息</view>
    <view class="content">
      <swiper indicator-dots="{{true}}" indicator-active-color="#fc5861" indicator-color="#888888" autoplay="true" circular="true" style="width:50vw; height: 80vw;">
      <block wx:for="{{id_images}}" wx:key="id_image">
        <swiper-item>
          <image src='{{item}}' mode="aspectFill" style="width:100%;height:100%;" />
        </swiper-item> 
      </block>
    </swiper>
    </view>
  </view>
  <view class="space"></view>
  <view class="logout-wrap">
    <button type="primary" size="default" loading="{{loading}}" class="logout-btn" bindtap="logout">退出登录</button>
  </view>
  <view class="space"></view>
</view>