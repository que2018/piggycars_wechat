camera {
  width: 100vw;
  height: 100vh;
}
.preview {
  width: 100vw !important;
  height: 100vh !important;
}
.take {
  position: fixed;
  width: 100vw;
  height: 80px;
  left: 0px;
  bottom: 60px;
}
.result {
  position: fixed;
  width: 100vw;
  height: 80px;
  left: 0px;
  bottom: 60px;
  display:flex;
  flex-direction: row;
}
.btn-take {
  display: block;
  margin: 0 auto;
  width: 80px;
  height: 80px;
  z-index: 1000;
}
.btn-wrap {
  width: 50%;
}
.btn-wrap image {
  width: 100%;
  height: 100%;
}
.btn-dismiss {
  display: block;
  width: 40px;
  height: 40px;
  margin: 0 auto;
  padding: 20px;
  background: red;
  border-radius: 50%;
}
.btn-confirm {
  display: block;
  width: 40px;
  height: 40px;
  margin: 0 auto;
  padding: 20px;
  background: #2fd113;
  border-radius: 50%;
}
