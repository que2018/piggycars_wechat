.container {
  display:flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
.title {
  display: block;
  margin: 0 auto;
  margin-top: 12vw;
  text-align: center;
  font-weight: bold;
  font-size: 22px;
}
.content {
  width: 84vw;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
}
form {
  width: 84vw;
  display: block;
  position: relative;
  margin: 0 auto;
  margin-top: 10vw;
  background: #ffffff;
}
.btn-submit {
  width: 85%;
  font-size: 18px;
  height: 40px;
  line-height: 40px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}
input {    
  width: 100%;
  height: 50px;
  font-size: 18px;
}
.input-groups {
  margin-bottom: 35px;
}
.input-group {
  display:flex;
  flex-direction: row;
  border-bottom: 1px solid #cccccc;
}
.input-group image {
  width: 26px;
  height: 26px;
  margin-top: 12px;
  margin-left: auto;
}
.btn-wrap {
  height: 80px;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100vw;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
