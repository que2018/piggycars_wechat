.flex-container {
  display:flex;
  flex-direction: column;
  padding: 3vw;
}
#ld-block {
  width:100vw;
  height:100vh;
  display:flex;
  justify-content:center; 
  align-items:center;
}
.ld-img {
  width:110px;
}
.article {
  display:flex;
  flex-direction:column;
  width: 94vw;
}
.article-hover {
  background: #efefef;
}
.aimage {
  width:100%;
  height: 64vw;
}
.atitle {
  display:flex;
  flex-direction: row;
  font-size: 18px;
  line-height: 50px;
  border-bottom: 0.7px solid #e6e6e6;
}
.atitle-img {
  font-size: 18px;
  line-height: 30px;
}
.adot {
  height: 50px;
  width: 18px;
  margin-right: 8px;
}
