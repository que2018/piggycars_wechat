<view class="flex-container">
  <view id="ld-block" class="{{show_loading?'show':'hide'}} ">
    <image src="../../images/loading.gif" mode="aspectFit" class="ld-img"></image>
  </view>
  <view wx:if="{{transitions.length != 0}}">
    <view class="ptable" wx:for="{{transitions}}" wx:key="{{order}}">
      <view class="prow" hover-class="prow-hover">
        <view class="column-type">{{item.type}}</view>
        <view class="prow2">
          <view class="column-money">{{item.in_type}}${{item.money}}</view>
          <view class="column-time">{{item.create_time}}</view>
        </view>
      </view>
    </view>
  </view><view wx:else>
    <view class="empty" hover-class="prow-hover">无记录</view>
  </view>
</view>
