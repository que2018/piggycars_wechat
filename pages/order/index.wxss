.flex-container {
  display:flex;
  flex-direction: column;
}
.row {
  display: flex;
  flex-direction: row;
  height: 100px;
  padding: 10px;
}
.row-hover {
  background: #efefef !important;
}
.row-l {
  width: 30%;
}
.row-r {
  width: 70%;
  padding: 25px 0px 0px 15px;
}
.oimg {
  width: 100%;
  height: 100px;
}
.name {
  color: #000000;
  font-size: 17px;
}
.lname {
  color: #000000;
  font-size: 12px;
}
.captain {
  display:flex;
  flex-direction: row;
  color: #888888;
  font-size: 13px;
  margin-top: 30px;
}
.status {
  width: 30%;
}
.date {
  width: 70%;
}
.space {
  height: 15px;
  background: #dbdbdb;
}
.no-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 80px);
  justify-content: center;
  font-size: 20px;
  font-weight: bold;
  color: #888888;
}
.btn-wrap {
  height: 80px;
  position: fixed;
  bottom: 0px;
  right: 0px;
  width: 100vw;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
.btn-car-list {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}
