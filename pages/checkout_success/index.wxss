.container-success {
  display:flex;
  flex-direction: column;
}
.title {
  height: 80px;
  color: #000000;
  font-size: 22px;
  font-weight:bold;
  text-align: center;
  line-height: 80px;
  margin-top: 20px;
}
.content {
  width: 85%;
  display: block;
  margin: 0 auto;
  text-align: left;
}
.btn-wrap {
  height: 80px;
  position: fixed;
  bottom: 0px;
  width: 100vw;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
.btn-detail {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}