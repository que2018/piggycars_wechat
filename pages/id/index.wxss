.id-btns {
  width: 120px;
  display: flex;
  margin: 0 auto;
  margin-top: 40px;
}
.btn-cn {
  width: 60px;
  line-height: 30px;
  background: #fc5861;
  color: #ffffff;
  text-align: center;
  padding: 3px;
  border-radius: 4px 0px 0px 4px;
}
.btn-en {
  width: 60px;
  line-height: 30px;
  background: #dfe1e6;
  color: #000000;
  text-align: center;
  padding: 3px;
  border-radius: 0px 4px 4px 0px;
}
.btn-wrap {
  height: 80px;
  position: fixed;
  bottom: 0px;
  width: 100vw;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
.btn-id {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}
.id-desp {
  line-height: 30px;
  text-align: center;
  margin-top: 30px;
}
.id-image image {
  display: block;
  margin: 0 auto;
}