flex-container {
  display:flex;
  flex-direction: column;
}
.categories {
  background-image: url("https://debug.piggycars.com/assets/image/home_bg1.jpg");
  background-repeat: no-repeat; 
  background-position: center; 
  background-size: cover;
}
.category-title {
  color: #ffffff;
  line-height: 50px;
  font-size: 20px;
  font-weight: bold;
  padding-left: 10vw;
}
.categories-inner {
  width: 92vw;
  padding-left: 8vw;
}
.category-item {
  width: 36vw; 
  height: 46vw; 
  display: inline-block;
}
.category-item-inner {
  width: 32vw; 
  height: 42vw; 
  margin-left: 2vw;
  margin-top: 2vw;
  border-radius: 10px;
  background: #ffffff;
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.16), 0 0 0 1px rgba(0,0,0,0.08);
}
.category-item-image {
  width: 32vw;
  height: 26vw; 
}
.category-item-title {
  color: #000000;
  font-size: 14px;
  text-align: center;
}
.category-item-price {
  color: #888888;
  font-size: 12px;
  text-align: center;
}
.featured {
  padding-left: 8vw;
  padding-right: 8vw;
}
.featured-title {
  font-weight: bold;
  font-size: 18px;
  color: #5b5561;
  line-height: 70px;
}
.featured-item {
  display: flex;
  height: 76px;
  margin-bottom: 16px;
  border-bottom: 0.6px solid #cccccc;
}
.featured-item-image {
  width: 30%;
}
.featured-item-image image {
  width: 100%;
  height: 100%;
}
.featured-captain {
  width: 70%;
  position: relative;
  padding-left: 20px;
}
.featured-model {
  font-size: 15px;
}
.featured-captain-sub {
  display: flex;
  position: absolute;
  bottom: 14px;
  width: 100%;
}
.featured-pickup {
  width: 50%;
  font-size: 12px;
  color: #888888;
}
.featured-price {
  width: 50%;
  font-size: 14px;
}
.fp1 {
  color: #fc5861;
  font-weight: bold;
}
.fp2 {
  color: #888888;
}
.blog-title {
  line-height: 50px;
  font-size: 18px;
  font-weight: bold;
  padding-left: 10vw;
  color: #5b5561;
}
.blogs-inner {
  width:90vw;
  padding-left: 10vw;
}
.blog-item {
  width: 45vw; 
  height: 55vw; 
  display: inline-block;
}
.blog-item-inner {
  width: 41vw; 
  height: 51vw; 
  margin-left: 2vw;
  margin-top: 2vw;
}
.blog-item-image {
  width: 41vw;
  height: 26vw; 
}
.blog-item-image image {
  width: 100%;
  height: 100%;
}
.blog-item-title {
  font-size: 11px;
  font-weight: bold;
  text-align: center;
  padding-top: 6px;
}
.blog-item-desp {
  color: #000000;
  font-size: 12px;
}
.pk1 image {
  width: 12px;
  height: 12px;
  padding-right: 5px;
  padding-top: 5px;
}
