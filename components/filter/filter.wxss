.flex-container {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
}
.show {
 display: flex;
}
.hide {
 display: none;
}
.filter-content {
  background: #ffffff;
  height: 100vh;
}
.btn-filter {
  position: fixed;
  bottom: 30px;
  right: 30px;
  color: white;
  width: 66px;
  height: 50px;
  line-height: 50px;
  font-weight: bold;
  border-radius: 18px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
  text-align: center;
}
.filter-title {
  background: #fd7e85;
  color: #ffffff;
  padding: 7px 14px;
}
.filter-items {
  display: flex;
  direction: row;
  padding: 16px;
  flex-wrap: wrap;
}
.filter-item {
  width: calc(25vw - 8px);
}
.filter-item-inner {
  margin: 3px;
  text-align: center;
  border-radius: 3px;
  font-size: 10px;
  line-height: 27px;
  background: #fca5b1;
  color: #ffffff;
}