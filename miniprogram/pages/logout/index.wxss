.logo {
  width: 50px;
  height: 50px;
  display: block;
  margin: 0 auto;
  margin-top: 15px;
}
.content {
  font-size: 15px;
  color: #888888;
  width: 84vw;
  margin: 0 auto;
  margin-top: 20px;
}
.btn-wrap {
  height: 80px;
  position: fixed;
  bottom: 0px;
  right: 0px;
  width: 100vw;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
.btn-logout {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}