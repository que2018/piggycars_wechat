}
.flex-container-info {
  display:flex;
  flex-direction: row;
  margin-bottom: 5px;
}
.btn-socials {
  display:flex;
  flex-direction: row;
  margin-top: 10px;
}
.btn-wechat-wrap {
  width: 100vw;
  height: 40px;
  position: fixed;
  bottom: 30px;
  margin: 0 auto;
  display: block;
}
