<view class="container-id">
  <view class="id-btns">
    <view class="btn-country btn-cn {{cn_selected?'btn-selected':''}}" bindtap="tapCN">中国</view>
    <view class="btn-country btn-us {{us_selected?'btn-selected':''}}" bindtap="tapUS">美国</view>
  </view>
  <view class="id-content">
    <view class="id-desp">{{description}}</view>
    <view class="id-image">  
      <image src="{{sample_image}}" mode="aspectFit"></image>
   </view>
  </view>
</view>
<view class="btn-wrap">
  <button class="btn-id" loading="{{btn_loading}}" disabled="{{btn_loading}}" bindtap="openCamera">{{btn_text}}</button>
</view>

