.container {
  display:flex;
  flex-direction: column;
  padding: 0vw;
  overflow: hidden;
}
.placeholder {
  height: 1px;
  background: #dbdbdb;
}
.slider {
  width: 100vw;
  height: 75vw;
}
swiper {
  width:100vw;
  height:75vw;
}
.swimg {
  width:100%;
  height:100%;
}
.mimg {
  width:100vw;
  height:75vw;
}
.info {
  width: 100vw;
}
.info-inner {
  padding: 20px;
}
.make {
  font-size: 15px;
}
.model {
  font-weight: bold;
  font-size: 19px;
  line-height: 30px;
}
.city {
  font-size: 15px;
  color: #888888;
}
.mil {
  float: right;
  font-size: 15px;
  color: #888888;
}
.spec {
  width: 100vw;
}
.spec-title {
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
}
.spec-key {
  display: inline-block;
  font-size: 15px;
  width: 25vw;
}
.spec-value {
  display: inline-block;
  font-size: 15px;
  color: #888888;
}
.spec-inner {
  padding:20px;
}
.feature {
  width: 100vw;
}
.feature-inner {
  padding:20px;
}
.feature-title {
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
}
.feature-item {
  font-size: 15px;
  color: #888888;
}
.benifit {
  width: 100vw;
}
.benifit-inner {
  padding:20px;
}
.benifit-title {
  font-size: 16px;
  line-height: 28px;
  font-weight: bold;
}
.benifit-item {
  font-size: 15px;
  color: #888888;
}
.bf-check {
  display:inline-block;
  width: 14px;
  height: 14px;
}
.bf-img {
  width: 100%;
  height: 100%;
}
.bf-text {
  display:inline-block;
  padding-left: 6px;
}
.map-inner {
  width: 100vw;
  height: 60vw;
  background-image: url("https://debug.piggycars.com/assets/image/map.jpg");
  background-repeat: no-repeat; 
  background-position: center; 
  background-size: cover;
}
.option {
  width: 100vw;
  position: relative;
}
.option-inner {
  display: block;
}
.option-number {
  width:100vw;
}
.plan-items {
  width: 86vw;
  display: block;
  margin: 0 auto;
}
.plan-item {
  height: 60px;
  line-height: 60px;
  display:flex;
  flex-direction: row;
  border-bottom: 0.5px solid #dbdbdb;
}
.plan-item-l {
  width: 50%;
}
.plan-item-r {
  width: 50%;
  color: #f55a7a;
}
.plan-item-icon {
  width: 20px;
}
.plan-arrow {
  width: 15px;
  height: 15px;
}
.plan-payment {
  text-align: right;
}
.plan-distance {
  text-align: right;
}
.plan-insurance {
  text-align: right;
}
.plan-pickup {
  text-align: right;
}
.plan-notice {
  text-align: center;
  font-size: 13px;
  color: #d11400;
  font-weight: bold;
  line-height: 50px;
}
.contact {
  width: 100vw;
}
.contact-inner {
  padding: 20px;
  font-size: 15px;
  color: #888888;
  text-align: center;
}
.res-placeholder {
  height: 80px;
}
.res {
  height: 80px;
  position: fixed;
  bottom: 0px;
  width: 100vw;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #ebebeb;
  z-index: 1000;
}
.res-btn {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: linear-gradient(90deg, rgba(242,72,145,1) 0%, rgba(253,79,80,1) 50%);
}
.res-btn-disabled {
  color: white;
  width: 85%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-weight: bold;
  border-radius: 3px;
  background: #cecece;
}
.monthp {
  height: 45px;
  margin-top: 15px;
  line-height: 45px;
}
.monthp-tax {
  position: absolute;
  font-size: 12px;
  left: 120px;
  top: 20px;
  color: #f55a7a;
}
.monthp-t1 {
  float: left;
  color: #f55a7a;
  font-size: 18px;
  font-weight:bold;
  line-height: 35px;
  padding-left: 9%;
}
.monthp-t2 {
  float: left;
  color: #f55a7a;
  font-size: 30px;
  font-weight: bold;
  padding-left: 5px;
}
.monthp-t3 {
  float: left;
  color: #888888;
  padding-left: 30px;
}
.monthp-t4 {
  float: left;
  color: #888888;
  padding-left: 5px;
}
.downp {
  height: 25px;
  line-height: 25px;
}
.downp-t1 {
  float: left;
  color: #888888;
  padding-left: 11%;
}
.downp-t2 {
  float: left;
  color: #888888;
  padding-left: 6px;
}
.picker-t {
  position: relative;
}  
.picker-t-inner {
  position: absolute;
  bottom: 0px;
  width: 100%;
  color: #f55a7a;
  text-align: center;
}
.picker-c {
  color: #f55a7a;
  font-weight: bold;
  text-align: center;
}
.leased {
  background-color: #ff0000a1;
  height: 120px;
  left: -60px;
  position: absolute;
  top: -60px;
  width: 120px;
  -webkit-transform: rotate(135deg);
  transform: rotate(-45deg);
  z-index: 1000;
  overflow: hidden;
}
.leased-text {
  color: #fff;
  font-size: 17px;
  top: 90px;
  position: absolute;
  width: 120px;
  text-align: center;
}
.bbtn-r {
  height: 62px;
  width: 62px;
  position: fixed;
  top: 50%;
  right: -30px;
  background: #fc5861;
}
.bbtn-l {
  text-align: center;
  background: #fc5861;
  line-height: 70px;
  color: #fff;
  border-radius: 50%;
  position: fixed;
  z-index: 10000;
  right: 0;
  top: 50%;
  padding: 6px;
}
.bbtn-li {
  background: #ed9a9f;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  line-height: 50px;
  font-size: 14px;
}


